
<canvas id="myChart" width="400" height="400"></canvas>
 <script>


var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {

      <% mm = Array.new %>
      <% kk = Array.new %>
      <% @top_views.each do |movie| %>
       <% mm.push(movie.title) %>
       <% kk.push(movie.view) %>

       <% end %>
         labels: <%=(mm.inspect.html_safe)%>,
        datasets: [{
            label: '# of Votes',
            data: <%=(kk.inspect.html_safe)%>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
