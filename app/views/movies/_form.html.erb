<%= form_for @movies do |f| %>
<% if @movies.errors.any? %>
  <% @movies.errors.full_messages.each do |error| %>
  <%= error.inspect%>
      <!-- js add_gritter(error, title: "Task1 Notification", sticky: false,time: 5000) %> -->
  <% end%>
  <%end%>
  <div class="form-group">
      <%= f.label :Title %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= f.label :Poster %>
        <%= f.file_field :image, class: "form-control", required: true %>
      </div>

  <div class="form-group">
    <!-- <label for="inputEmail3" class="col-sm-2"> -->
      <%= f.label :Genre %>
      <%= f.text_field :genre, class: "form-control", required: true %>
    </div>

  <div class="form-group">
        <%= f.label :Plot %>
        <%= f.text_area :plot, autofocus: true, class: "form-control",required: true %>
  </div>


    <div class="form-group">
          <%= f.label :Cast %>
          <%= f.text_area :cast, autofocus: true, class: "form-control",required: true %>
    </div>

  <div class="form-group">
      <%= f.label :Year %>
      <%= f.date_field :year,as: :year,class: "form-control", required: true %>
    </div>


  <div class="form-group">
      <%= f.label :Rating%>
      <%= f.number_field :rating, :step =>"0.1", class: "form-control", required: true%>
    </div>

  <div class="form-group">
      <%= f.label :Web %>
      <%= f.text_field :web, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Add new Moviews",class: "btn btn-success btn-block"%>
    </div>
  </div>
  <%end%>
