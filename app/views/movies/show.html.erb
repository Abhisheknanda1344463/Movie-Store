 <div class="container">
			<div class="row"> <i>
				<div class="col-md-4">
					<!-- <img alt="Bootstrap Image Preview" src="http://lorempixel.com/140/140/" class="img-thumbnail" style="padding: 90px;" /> -->
					<img alt="<% @movies.title %>" src="<%= @movies.image_url %>" class="img-thumbnail" />
				</div>
				<div class="col-md-8">
					<div class="col-md-4">
					<h3>
						<%= @movies.title + " " + "(#{@movies.year})" %>
					</h3>
					       <b><i>Genre:</i></b>
					        <i><%= @movies.genre %></i>
			        	</div>
				<div class ="col-md-4">
						   	<%=image_tag 'rating.png',class:"rating-show-image"%><h4 class= "rating-show"> <%= @movies.rating + "/10" %></h4>
				</div>
						<div class="col-md-4"></div>
						<div class="col-md-12">
							<div>
				          <h2>Plot:</h2>
						      <p><%=(@movies.plot)%></p>
				      </div>
						</div>
					 <div class="col-md-12">
						<div>
						     <h3>Cast</h3>
								 <p><%=@movies.cast %></p>
					 </div>
				 </div>
				 <div class="col-md-12">
           <div>
                <a href="<%= @movies.web%>" class="btn btn-primary web-show">Website</a>
					 </div>
			</div>
		</div>
	</div>

<div class="row up-margin">
	<div class="col-md-12">
      <div class="col-md-6">
               <% if @movies.comments.present?%>
							  <div class="row back-color">
								</br>

								 <%@movies.comments.order('created_at desc').limit(4).reverse.each do |comment| %>
									 <div class="col-md-3">
									  <% if comment.user.image.present? %>
										<img alt="<% comment.user.name%>" src="<%= comment.user.image%>" class="img-thumbnail avatar-img" align="middle" />
										<% else %>
										 <%= image_tag "avatar.png",class: "img-thumbnail avatar-img",align: "middle" %>
										 <% end %>

									 </div>

							  <div class="col-md-9 comment">
								     <h3><%=  comment.user.name%></h3>
								  <p>
									    <%= comment.body %><p class="btm"><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong></small></p>
							   	</p>
							</div>
            </p>
					 <div class="clearfix"></div>
			 </br>
			 <%end%>

			<div class="col-md-12">
			 	 <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" style="float: right;">
					 More Reviews
				 </button>
			</div>

			 <%= render partial: "comments_modal",locals: {movies: @movies} %>
		</div>
		<% else %>
		Be the first to comment
		<% end %>
		<div class="row">
			<%= render partial: "comments",locals: {movies: @movies} %>
		</div>
	</div>

	<div class="col-md-6">
	<div class="panel panel-default">
					 <div class="panel-heading">
						<h3 class="panel-title">
							<h4>Top 10 List of <%= @movies.genre + "-Movies"%></h4>
						</h3>
</div>
                     <%= render partial: "top-list",locals: { movies: @movie_list} %>
</div>
			</div>
		</div>
	</div>
</div>
